.chat-contents
  .sidebar
    .sidebar__user
      .sidebar__user__name
        = current_user.name
        .sidebar__user--icon
          = link_to new_group_path do
            = fa_icon "pencil-square-o", class: "button" 
          = link_to edit_user_path(current_user)  do
            = fa_icon "cog", class: "button"

    .sidebar__groups
      = render "sidebar__group"

  .chat
    .chat-header
      .chat-header__group
        .chat-header__group__name
          test
        .chat-header__members
          MEMBER: taro
      .chat-header__group__edit-btn
        = link_to "Edit", "#"

    .chat-body
      = render "chat-body__messages-list"

    = render "chat-footer"
