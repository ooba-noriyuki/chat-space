.chat-body__messages-list{"data-message_id" => "#{message.id}"}
  .chat__message-name
    = message.user.name
  .chat__message-time
    = message.created_at
  .chat__message-body
    - if message.body.present?
      %p.chat__message-body__content
        = message.body
    = image_tag message.image.url, class: "lower-message__image" if message.image.present?
