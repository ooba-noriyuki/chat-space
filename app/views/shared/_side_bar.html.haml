.chat-contents
  .sidebar
    .sidebar__user
      .sidebar__user__name
        = current_user.name
        .sidebar__user--icon
          = link_to new_group_path do
            = fa_icon "pencil-square-o", class: "button"
          = link_to edit_user_path(current_user)  do
            = fa_icon "cog", class: "button"

    .sidebar__groups
      .sidebar__group
        - current_user.groups.each do |group|
          = link_to group_messages_path(group) do
            .sidebar__group-name
              = group.name
            .sidebar__group-message
              message

